generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  phoneNumber String   @unique
  firstName   String?
  lastName    String?
  email       String?
  country     String
  isVerified  Boolean  @default(false)
  kycStatus   KycStatus @default(PENDING)
  balance     Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sentTransactions     Transaction[] @relation("SenderTransactions")
  receivedTransactions Transaction[] @relation("ReceiverTransactions")

  @@map("users")
}

model Transaction {
  id                String            @id @default(cuid())
  senderId          String
  receiverId        String
  senderCurrency    String
  receiverCurrency  String
  senderAmount      Float
  receiverAmount    Float
  exchangeRate      Float
  fee               Float
  status            TransactionStatus @default(PENDING)
  cardanoTxHash     String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  sender   User @relation("SenderTransactions", fields: [senderId], references: [id])
  receiver User @relation("ReceiverTransactions", fields: [receiverId], references: [id])

  @@map("transactions")
}

model Currency {
  code        String @id
  name        String
  country     String
  rateToUSD   Float
  isSupported Boolean @default(true)
  updatedAt   DateTime @updatedAt

  @@map("currencies")
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}